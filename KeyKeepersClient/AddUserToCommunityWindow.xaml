<Window x:Class="KeyKeepersClient.AddUserToCommunityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="Add User to Community"
        Icon="Images/logo.png"
        Height="500"
        Width="550"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#171C26"
            BorderBrush="#FDE053"
            BorderThickness="3"
            CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Panel -->
            <Border Grid.Row="0"
                    Background="#0E121B"
                    BorderBrush="#222A39"
                    BorderThickness="0,0,0,2"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Image Grid.Column="0"
                           Source="Images/Teams/admin.png"
                           Width="24"
                           Height="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Add User to Community"
                               FontFamily="Bahnschrift"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"/>

                    <!-- Close button -->
                    <Button Grid.Column="2"
                            Content="Ã—"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <StackPanel Grid.Row="1"
                        Margin="30,20,30,20">
                <!-- Community Name Display -->
                <TextBlock Text="Community"
                           FontFamily="Bahnschrift"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,8"/>

                <Border Background="#0E121B"
                        BorderBrush="#222A39"
                        BorderThickness="2"
                        CornerRadius="10"
                        Height="45"
                        Margin="0,0,0,20">
                    <TextBlock x:Name="CommunityNameTextBlock"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               Foreground="#999999"
                               VerticalAlignment="Center"
                               Padding="15,0"/>
                </Border>

                <!-- Username Search Field -->
                <TextBlock Text="Search Username"
                           FontFamily="Bahnschrift"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,8"/>

                <Grid>
                    <Border x:Name="UsernameSearchBorder"
                            Background="#0E121B"
                            BorderBrush="#222A39"
                            BorderThickness="2"
                            CornerRadius="10"
                            Height="45"
                            Margin="0,0,0,0">
                        <TextBox x:Name="UsernameSearchTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontFamily="Bahnschrift"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="15,0"
                                 TextChanged="UsernameSearchTextBox_TextChanged"
                                 PreviewKeyDown="UsernameSearchTextBox_PreviewKeyDown"/>
                    </Border>

                    <!-- Suggestions Popup -->
                    <Popup x:Name="SuggestionsPopup"
                           PlacementTarget="{Binding ElementName=UsernameSearchBorder}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           StaysOpen="False"
                           PopupAnimation="Fade">
                        <Border Background="#0E121B"
                                BorderBrush="#222A39"
                                BorderThickness="2"
                                CornerRadius="10"
                                MaxHeight="200"
                                Width="{Binding ElementName=UsernameSearchBorder, Path=ActualWidth}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ListBox x:Name="SuggestionsListBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         FontFamily="Bahnschrift"
                                         FontSize="14"
                                         SelectionChanged="SuggestionsListBox_SelectionChanged"
                                         MouseLeftButtonUp="SuggestionsListBox_MouseLeftButtonUp">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background"
                                                    Value="Transparent"/>
                                            <Setter Property="Foreground"
                                                    Value="White"/>
                                            <Setter Property="Padding"
                                                    Value="15,10"/>
                                            <Setter Property="Cursor"
                                                    Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="ItemBorder"
                                                                Background="{TemplateBinding Background}"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver"
                                                                    Value="True">
                                                                <Setter TargetName="ItemBorder"
                                                                        Property="Background"
                                                                        Value="#222A39"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected"
                                                                    Value="True">
                                                                <Setter TargetName="ItemBorder"
                                                                        Property="Background"
                                                                        Value="#2A3547"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </ScrollViewer>
                        </Border>
                    </Popup>
                </Grid>

                <!-- Search Status -->
                <TextBlock x:Name="SearchStatusTextBlock"
                           FontFamily="Bahnschrift"
                           FontSize="12"
                           Foreground="#666666"
                           Margin="5,5,0,15"
                           Visibility="Collapsed"/>

                <!-- Selected User Info Panel -->
                <Border x:Name="UserInfoPanel"
                        Background="#0E121B"
                        BorderBrush="#1B5E40"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,10,0,0"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Selected User"
                                   FontFamily="Bahnschrift"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#999999"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="SelectedUsernameTextBlock"
                                   FontFamily="Bahnschrift"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Info Text -->
                <TextBlock Text="Type to search for users. Select a user from the dropdown to add them to the community."
                           FontFamily="Bahnschrift"
                           FontSize="13"
                           Foreground="#999999"
                           TextWrapping="Wrap"
                           Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="2"
                  Margin="30,0,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Content="Cancel"
                        Height="45"
                        Background="#2A1010"
                        Foreground="#FF6B6B"
                        BorderThickness="0"
                        FontFamily="Bahnschrift"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Add Button -->
                <Button x:Name="AddButton"
                        Grid.Column="2"
                        Content="Add User"
                        Height="45"
                        Background="#1B5E40"
                        Foreground="White"
                        BorderThickness="0"
                        FontFamily="Bahnschrift"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        IsEnabled="False"
                        Click="AddButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled"
                                                     Value="False">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#0E121B"/>
                                                <Setter Property="Foreground"
                                                        Value="#666666"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
