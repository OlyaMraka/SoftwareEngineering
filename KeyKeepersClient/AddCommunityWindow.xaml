<Window x:Class="KeyKeepersClient.AddCommunityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="Add Community"
        Icon="Images/logo.png"
        Height="350"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#171C26"
            BorderBrush="#FDE053"
            BorderThickness="3"
            CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Panel -->
            <Border Grid.Row="0"
                    Background="#0E121B"
                    BorderBrush="#222A39"
                    BorderThickness="0,0,0,2"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <TextBlock Grid.Column="0"
                               Text="ðŸ‘¥"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Add New Community"
                               FontFamily="Bahnschrift"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"/>

                    <!-- Close button -->
                    <Button Grid.Column="2"
                            Content="Ã—"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1"
                  Margin="30">
                <StackPanel>
                    <!-- Description -->
                    <TextBlock Text="Create a shared password vault for your family or team"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               Foreground="#AAA"
                               TextWrapping="Wrap"
                               Margin="0,0,0,30"/>

                    <!-- Community Name Label -->
                    <TextBlock Text="Community Name"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <!-- Community Name Input -->
                    <Border Background="#0E121B"
                            BorderBrush="#222A39"
                            BorderThickness="2"
                            CornerRadius="10"
                            Height="45"
                            Margin="0,0,0,20">
                        <TextBox x:Name="CommunityNameTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontFamily="Bahnschrift"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="15,0"
                                 MaxLength="50"
                                 TextChanged="CommunityNameTextBox_TextChanged"/>
                    </Border>

                    <!-- Character Counter -->
                    <TextBlock x:Name="CharacterCountTextBlock"
                               Text="0 / 50 characters"
                               FontFamily="Bahnschrift"
                               FontSize="12"
                               Foreground="#666"
                               HorizontalAlignment="Right"
                               Margin="0,-15,0,20"/>
                </StackPanel>
            </Grid>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="2"
                  Margin="30,0,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Content="Cancel"
                        Height="45"
                        FontFamily="Bahnschrift"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#0E121B"
                        Foreground="White"
                        BorderThickness="2"
                        BorderBrush="#222A39"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#222A39"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Create Button -->
                <Button x:Name="CreateButton"
                        Grid.Column="2"
                        Content="Create Community"
                        Height="45"
                        FontFamily="Bahnschrift"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Black"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="False"
                        Click="CreateButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,0">
                            <GradientStop Color="#815A11"
                                          Offset="0"/>
                            <GradientStop Color="#FDE053"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    CornerRadius="10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Opacity"
                                                Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled}"
                                                         Value="False">
                                                <Setter Property="Opacity"
                                                        Value="0.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
