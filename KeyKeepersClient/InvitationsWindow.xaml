<Window x:Class="KeyKeepersClient.InvitationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="Community Invitations"
        Icon="Images/logo.png"
        Height="600"
        Width="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#171C26"
            BorderBrush="#FDE053"
            BorderThickness="3"
            CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Panel -->
            <Border Grid.Row="0"
                    Background="#0E121B"
                    BorderBrush="#222A39"
                    BorderThickness="0,0,0,2"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo/Icon -->
                    <Image Grid.Column="0"
                           Source="Images/Teams/mail_0.png"
                           Width="24"
                           Height="24"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Community Invitations"
                               FontFamily="Bahnschrift"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"/>

                    <!-- Close button -->
                    <Button Grid.Column="2"
                            Content="Ã—"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30">
                <StackPanel x:Name="InvitationsPanel">
                    <!-- Invitations will be added here dynamically -->
                    <TextBlock x:Name="NoInvitationsText"
                               Text="No pending invitations"
                               FontFamily="Bahnschrift"
                               FontSize="16"
                               Foreground="#999999"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,50,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="2"
                  Margin="30,0,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Decline All Button -->
                <Button x:Name="DeclineAllButton"
                        Grid.Column="0"
                        Content="Decline All"
                        Height="45"
                        Background="#2A1010"
                        Foreground="#FF6B6B"
                        BorderThickness="0"
                        FontFamily="Bahnschrift"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="DeclineAllButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Accept All Button -->
                <Button x:Name="AcceptAllButton"
                        Grid.Column="2"
                        Content="Accept All"
                        Height="45"
                        Background="#1B5E40"
                        Foreground="White"
                        BorderThickness="0"
                        FontFamily="Bahnschrift"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="AcceptAllButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
