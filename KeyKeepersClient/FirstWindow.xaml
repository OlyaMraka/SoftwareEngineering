<Window x:Class="KeyKeepersClient.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="FamilyPass Manager"
        Icon="Images/logo.png"
        Height="700"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#171C26">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Panel -->
        <Border Grid.Row="0"
                Background="#0E121B"
                BorderBrush="#222A39"
                BorderThickness="0,0,0,2"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Image Grid.Column="0"
                       Source="Images/logo.png"
                       Width="30"
                       Height="30"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="FamilyPass Manager"
                           FontFamily="Bahnschrift"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"/>

                <!-- Minimize/Close buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                    <Button Content="—"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Bahnschrift"
                            FontSize="16"
                            FontWeight="Bold"
                            Margin="3,0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="MinimizeButton_Click"/>
                    <Button Content="x"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- User Avatar -->
            <Image Grid.Row="0"
                   Source="Images/SignIn_LogUp/user.png"
                   Width="250"
                   Height="250"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,40,0,0"/>

            <!-- Login Button -->
            <Border Grid.Row="2"
                    Height="55"
                    Background="#0E121B"
                    BorderBrush="#222A39"
                    BorderThickness="3"
                    CornerRadius="27"
                    HorizontalAlignment="Stretch">
                <Button Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontFamily="Bahnschrift"
                        FontSize="24"
                        FontWeight="Normal"
                        Content="Log in"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Cursor="Hand"
                        Click="LoginButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

            <!-- Sign Up Button -->
            <Border Grid.Row="4"
                    Height="55"
                    Background="#0E121B"
                    BorderBrush="#222A39"
                    BorderThickness="3"
                    CornerRadius="27"
                    HorizontalAlignment="Stretch">
                <Button Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontFamily="Bahnschrift"
                        FontSize="24"
                        FontWeight="Normal"
                        Content="Sign up"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Cursor="Hand"
                        Click="SignUpButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Window>
