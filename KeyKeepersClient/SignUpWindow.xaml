<Window x:Class="KeyKeepersClient.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="FamilyPass Manager - Sign Up"
        Icon="Images/logo.png"
        Height="700"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#171C26"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Panel -->
        <Border Grid.Row="0"
                Background="#0E121B"
                BorderBrush="#222A39"
                BorderThickness="0,0,0,2"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Image Grid.Column="0"
                       Source="Images/logo.png"
                       Width="30"
                       Height="30"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="FamilyPass Manager"
                           FontFamily="Bahnschrift"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"/>

                <!-- Minimize/Close buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                    <Button Content="â€”"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Bahnschrift"
                            FontSize="16"
                            FontWeight="Bold"
                            Margin="3,0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="MinimizeButton_Click"/>
                    <Button Content="x"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- User Avatar -->
            <Image Grid.Row="1"
                   Source="Images/SignIn_LogUp/user.png"
                   Width="80"
                   Height="80"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <!-- First Name Label -->
            <TextBlock Grid.Row="3"
                       Text="First Name"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"/>

            <!-- First Name TextBox -->
            <Border Grid.Row="4"
                    Height="40"
                    Background="#2A2F3A"
                    CornerRadius="20"
                    BorderThickness="0">
                <Grid>
                    <TextBox x:Name="FirstNameTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             CaretBrush="White"
                             FontFamily="Bahnschrift"
                             FontSize="14"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             Margin="15,0"
                             TextChanged="FirstNameTextBox_TextChanged"/>
                    <TextBlock x:Name="FirstNamePlaceholder"
                               Text="Enter your first name"
                               Foreground="#808080"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="15,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Last Name Label -->
            <TextBlock Grid.Row="6"
                       Text="Last Name"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"/>

            <!-- Last Name TextBox -->
            <Border Grid.Row="7"
                    Height="40"
                    Background="#2A2F3A"
                    CornerRadius="20"
                    BorderThickness="0">
                <Grid>
                    <TextBox x:Name="LastNameTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             CaretBrush="White"
                             FontFamily="Bahnschrift"
                             FontSize="14"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             Margin="15,0"
                             TextChanged="LastNameTextBox_TextChanged"/>
                    <TextBlock x:Name="LastNamePlaceholder"
                               Text="Enter your last name"
                               Foreground="#808080"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="15,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Email Label -->
            <TextBlock Grid.Row="9"
                       Text="Email"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"/>

            <!-- Email TextBox -->
            <Border Grid.Row="10"
                    Height="40"
                    Background="#2A2F3A"
                    CornerRadius="20"
                    BorderThickness="0">
                <Grid>
                    <TextBox x:Name="EmailTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             CaretBrush="White"
                             FontFamily="Bahnschrift"
                             FontSize="14"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             Margin="15,0"
                             TextChanged="EmailTextBox_TextChanged"/>
                    <TextBlock x:Name="EmailPlaceholder"
                               Text="Enter your email"
                               Foreground="#808080"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="15,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Username Label -->
            <TextBlock Grid.Row="12"
                       Text="Username"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"/>

            <!-- Username TextBox -->
            <Border Grid.Row="13"
                    Height="40"
                    Background="#2A2F3A"
                    CornerRadius="20"
                    BorderThickness="0">
                <Grid>
                    <TextBox x:Name="UsernameTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             CaretBrush="White"
                             FontFamily="Bahnschrift"
                             FontSize="14"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             Margin="15,0"
                             TextChanged="UsernameTextBox_TextChanged"/>
                    <TextBlock x:Name="UsernamePlaceholder"
                               Text="Choose a username"
                               Foreground="#808080"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="15,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Password Label -->
            <TextBlock Grid.Row="15"
                       Text="Password"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"/>

            <!-- Password TextBox -->
            <Border Grid.Row="16"
                    Height="40"
                    Background="#2A2F3A"
                    CornerRadius="20"
                    BorderThickness="0">
                <Grid>
                    <PasswordBox x:Name="PasswordTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 CaretBrush="White"
                                 FontFamily="Bahnschrift"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Margin="15,0"
                                 PasswordChanged="PasswordTextBox_PasswordChanged"/>
                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Create a strong password"
                               Foreground="#808080"
                               FontFamily="Bahnschrift"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="15,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Buttons Container -->
            <Grid Grid.Row="18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Personal Button -->
                <Border Grid.Column="0"
                        Height="50"
                        CornerRadius="24"
                        HorizontalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,0">
                            <GradientStop Color="#815A11"
                                          Offset="0"/>
                            <GradientStop Color="#FDE053"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontFamily="Bahnschrift"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Content="personal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Cursor="Hand"
                            Click="PersonalButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>

                <!-- Team Button -->
                <Border Grid.Column="2"
                        Height="50"
                        CornerRadius="24"
                        HorizontalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,0">
                            <GradientStop Color="#815A11"
                                          Offset="0"/>
                            <GradientStop Color="#FDE053"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontFamily="Bahnschrift"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Content="team"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Cursor="Hand"
                            Click="TeamButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>