<Window x:Class="KeyKeepersClient.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="FamilyPass Manager - Sign Up"
        Icon="Images/logo.png"
        Height="700"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#171C26">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Panel -->
        <Border Grid.Row="0"
                Background="#0E121B"
                BorderBrush="#222A39"
                BorderThickness="0,0,0,2"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Image Grid.Column="0"
                       Source="Images/logo.png"
                       Width="30"
                       Height="30"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="FamilyPass Manager"
                           FontFamily="Bahnschrift"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"/>

                <!-- Minimize/Close buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                    <Button Content="â€”"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Bahnschrift"
                            FontSize="16"
                            FontWeight="Bold"
                            Margin="3,0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="MinimizeButton_Click"/>
                    <Button Content="x"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- User Avatar -->
            <Image Grid.Row="1"
                   Source="Images/SignIn_LogUp/user.png"
                   Width="120"
                   Height="120"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <!-- Username Label -->
            <TextBlock Grid.Row="3"
                       Text="Username"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,8"/>

            <!-- Username Input with Placeholder -->
            <Grid Grid.Row="4">
                <TextBox x:Name="UsernameTextBox"
                         Height="45"
                         Background="#0E121B"
                         BorderBrush="#222A39"
                         BorderThickness="2"
                         Foreground="White"
                         FontFamily="Bahnschrift"
                         FontSize="14"
                         Padding="15,0"
                         VerticalContentAlignment="Center"
                         TextChanged="UsernameTextBox_TextChanged"/>
                <TextBlock x:Name="UsernamePlaceholder"
                           Text="username"
                           FontFamily="Bahnschrift"
                           FontSize="14"
                           Foreground="#666666"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="15,0"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Password Label -->
            <TextBlock Grid.Row="6"
                       Text="Password"
                       FontFamily="Bahnschrift"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,8"/>

            <!-- Password Input with Placeholder -->
            <Grid Grid.Row="7">
                <PasswordBox x:Name="PasswordTextBox"
                             Height="45"
                             Background="#0E121B"
                             BorderBrush="#222A39"
                             BorderThickness="2"
                             Foreground="White"
                             FontFamily="Bahnschrift"
                             FontSize="14"
                             Padding="15,0"
                             VerticalContentAlignment="Center"
                             PasswordChanged="PasswordTextBox_PasswordChanged"/>
                <TextBlock x:Name="PasswordPlaceholder"
                           Text="password"
                           FontFamily="Bahnschrift"
                           FontSize="14"
                           Foreground="#666666"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="15,0"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Buttons Container -->
            <Grid Grid.Row="9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Personal Button -->
                <Border Grid.Column="0"
                        Height="55"
                        CornerRadius="27"
                        HorizontalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                EndPoint="1,0">
                            <GradientStop Color="#815A11"
                                    Offset="0"/>
                            <GradientStop Color="#FDE053"
                                    Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontFamily="Bahnschrift"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Content="personal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Cursor="Hand"
                            Click="PersonalButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>

                <!-- Team Button -->
                <Border Grid.Column="2"
                        Height="55"
                        CornerRadius="27"
                        HorizontalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                EndPoint="1,0">
                            <GradientStop Color="#815A11"
                                    Offset="0"/>
                            <GradientStop Color="#FDE053"
                                    Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontFamily="Bahnschrift"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Content="team"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Cursor="Hand"
                            Click="TeamButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>