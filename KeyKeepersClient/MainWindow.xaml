<Window x:Class="KeyKeepersClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="FamilyPass Manager"
        Icon="Images/logo.png"
        Height="800"
        Width="1200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#171C26">

    <Window.Resources>
        <!-- Category Button Template -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#171C26"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="10">
                            <ContentPresenter Margin="20,0,20,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#222A39"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Category Button Style with Gradient -->
        <Style x:Key="ActiveCategoryButtonStyle" TargetType="Button" BasedOn="{StaticResource CategoryButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#815A11" Offset="0"/>
                        <GradientStop Color="#FDE053" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Add Button Style with Gradient -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#815A11" Offset="0"/>
                        <GradientStop Color="#FDE053" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Panel -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#0E121B"
                BorderBrush="#222A39"
                BorderThickness="0,0,0,2"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Image Grid.Column="0"
                       Source="Images/logo.png"
                       Width="30"
                       Height="30"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="FamilyPass Manager"
                           FontFamily="Bahnschrift"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"/>

                <!-- Minimize/Close buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                    <Button Content="—"
                            Width="25"
                            Height="25"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Bahnschrift"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="MinimizeButton_Click"/>
                    <Button Content="x"
                            Width="25"
                            Height="25"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Bahnschrift"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Left Sidebar Panel -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="#0E121B"
                BorderBrush="#222A39"
                BorderThickness="0,0,2,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <Border Grid.Row="0"
                        Background="#171C26"
                        CornerRadius="20"
                        Height="45"
                        Margin="0,10,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="🔍"
                                   FontSize="20"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        
                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontFamily="Bahnschrift"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="0,0,15,0"
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </Grid>
                </Border>

                <!-- Categories ScrollViewer -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,0,0,10">
                    <StackPanel x:Name="CategoriesPanel">
                        <!-- Default Categories -->
                        <Button Style="{StaticResource ActiveCategoryButtonStyle}"
                                Tag="AllItems"
                                Click="CategoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛡️" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="All items" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource CategoryButtonStyle}"
                                Tag="Favorite"
                                Click="CategoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⭐" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Favorite" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource CategoryButtonStyle}"
                                Tag="Internet"
                                Click="CategoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🌐" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Internet" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource CategoryButtonStyle}"
                                Tag="Gmaile"
                                Click="CategoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✉️" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Gmaile" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource CategoryButtonStyle}"
                                Tag="Phone"
                                Click="CategoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📱" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Phone" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource CategoryButtonStyle}"
                                Tag="Games"
                                Click="CategoryButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎮" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Games" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Add Password Button -->
                <Button Grid.Row="2"
                        Style="{StaticResource AddButtonStyle}"
                        Click="AddPasswordButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="+" FontSize="24" Margin="0,0,8,0" FontWeight="Bold"/>
                        <TextBlock Text="Password" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Add Category Button -->
                <Button Grid.Row="3"
                        Style="{StaticResource AddButtonStyle}"
                        Click="AddCategoryButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="+" FontSize="24" Margin="0,0,8,0" FontWeight="Bold"/>
                        <TextBlock Text="Category" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1"
              Grid.Column="1"
              Background="#171C26">
            <TextBlock Text="Main Application Content"
                       FontFamily="Bahnschrift"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Bottom Panel -->
        <Border Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#0E121B"
                BorderBrush="#222A39"
                BorderThickness="0,2,0,0">
            <Grid>
                <!-- Log Out Button -->
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0"
                        Background="#171C26"
                        BorderBrush="#222A39"
                        BorderThickness="2"
                        Width="100"
                        Height="35"
                        Content="Log Out"
                        FontFamily="Bahnschrift"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Cursor="Hand"
                        Click="LogOutButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#222A39"/>
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#2A3441"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
