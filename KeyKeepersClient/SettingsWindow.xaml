<Window x:Class="KeyKeepersClient.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeepersClient"
        mc:Ignorable="d"
        Title="Settings"
        Icon="Images/logo.png"
        Height="650"
        Width="750"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#0E121B"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontFamily"
                    Value="Bahnschrift"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Height"
                    Value="60"/>
            <Setter Property="Margin"
                    Value="0,0,0,10"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="10">
                            <ContentPresenter Margin="20,0,20,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#222A39"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#171C26"
            BorderBrush="#FDE053"
            BorderThickness="3"
            CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Panel -->
            <Border Grid.Row="0"
                    Background="#0E121B"
                    BorderBrush="#222A39"
                    BorderThickness="0,0,0,2"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo/Icon -->
                    <Image Grid.Column="0"
                           Source="Images/settings.png"
                           Width="24"
                           Height="24"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Settings"
                               FontFamily="Bahnschrift"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"/>

                    <!-- Close button -->
                    <Button Grid.Column="2"
                            Content="×"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Bahnschrift"
                            FontSize="24"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1"
                  Margin="30">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Manage Your Content"
                               FontFamily="Bahnschrift"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,30"/>

                    <!-- Add Password Button -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Click="AddPasswordButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/plus.png"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Add New Password"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Add Category Button -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Click="AddCategoryButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/plus.png"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Add New Category"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Add Community Button -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Click="AddCommunityButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/plus.png"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Add New Community"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Separator -->
                    <Border Height="2"
                            Background="#222A39"
                            Margin="0,20,0,20"/>

                    <!-- Account Settings Button -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Click="AccountSettingsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/settings.png"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Account Settings"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Log Out Button -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Background="#2A1010"
                            Click="LogOutButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏻"
                                       FontSize="24"
                                       Margin="0,0,15,0"
                                       Foreground="#FF6B6B"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Log Out"
                                       Foreground="#FF6B6B"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
